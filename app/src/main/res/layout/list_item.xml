<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    android:background="?android:attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:maxLines="1"
        android:ellipsize="end"
        tools:text="Mapel"
        android:id="@+id/textViewPelajaran"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textSize="15sp" />

    <TextView
        tools:text="Guru"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewPelajaran"
        android:layout_alignLeft="@id/textViewPelajaran"
        android:layout_alignStart="@id/textViewPelajaran"
        android:maxLines="1"
        android:ellipsize="end"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:id="@+id/textViewGuru" />

    <TextView
        android:text="Jam pelajaran ke- "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.Switch"
        android:layout_below="@+id/textViewGuru"
        android:layout_alignLeft="@+id/textViewGuru"
        android:layout_alignStart="@+id/textViewGuru"
        android:id="@+id/textView2" />

    <TextView
        android:text="Jam ke : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.Switch"
        android:id="@+id/textViewJam"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2" />


</RelativeLayout>